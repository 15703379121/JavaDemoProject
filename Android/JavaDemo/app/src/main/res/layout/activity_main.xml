<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main">

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java程序设计"
        android:textColor="@color/tc_title"
        android:textSize="@dimen/big_size"/>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_below="@id/tv_main_title"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent_half"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_item_gv_main1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/bg_splash"/>
            <TextView
                android:id="@+id/tv_item_gv_main1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java视频"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/tv_main_title"
        android:layout_toRightOf="@id/rl_1"
        android:id="@+id/rl_2"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent_half"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_item_gv_main2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/bg_splash"/>
            <TextView
                android:id="@+id/tv_item_gv_main2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java视频"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_1"
        android:id="@+id/rl_3"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent_half"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_item_gv_main3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/bg_splash"/>
            <TextView
                android:id="@+id/tv_item_gv_main3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java视频"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_1"
        android:layout_toRightOf="@id/rl_3"
        android:id="@+id/rl_4"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_news"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="0"
            android:gravity="center"
            android:textSize="@dimen/dp10"
            android:background="@mipmap/icon_news"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent_half"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_item_gv_main4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/bg_splash"/>
            <TextView
                android:id="@+id/tv_item_gv_main4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java视频"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_3"
        android:id="@+id/rl_5"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent_half"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_item_gv_main5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@mipmap/bg_splash"/>
            <TextView
                android:id="@+id/tv_item_gv_main5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java视频"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
