<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@mipmap/bg_login">
    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登录"
        android:textColor="@color/black"
        android:textSize="@dimen/title"
        />
    <EditText
        android:id="@+id/et_login_admin"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="学号"/>
    <EditText
        android:id="@+id/et_login_psd"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="密码"/>
    <RadioGroup
        android:id="@+id/rg_login"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_login_student"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生"/>
        <RadioButton
            android:id="@+id/rb_login_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师"/>
        <RadioButton
            android:id="@+id/rb_login_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教秘"/>
    </RadioGroup>
    <TextView
        android:id="@+id/tv_login_submit"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/bt_login"
        android:text="登录"
        android:textColor="@color/black"
        android:padding="20dp"
        />
</LinearLayout>